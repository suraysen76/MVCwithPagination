@model MVCwithPagination.Models.PagingModel

@{
    ViewBag.Title = "Create Student";
}

<h2> Student w/ Paging</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Student w/ Paging</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Show student with number of records per page
            <div class="col-md-10">
                @Html.EditorFor(model => model.PageSize, new { htmlAttributes = new { @class = "form-control", Type="Number" } })
                @Html.ValidationMessageFor(model => model.PageSize, "", new { @class = "text-danger" })
                <input type="submit" value="Show" class="btn btn-default" />
            </div>
        </div>

       
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}