@model IEnumerable<MVCwithPagination.Models.Enrollment>

@{
    ViewBag.Title = "Grading";
}

<h2>Grading</h2>

<p>
    @Html.ActionLink("Create New Grading", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Course.CourseID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course.Title)
        </th>
        <th>
            Student Name
        <th>
            @Html.DisplayNameFor(model => model.Grade)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.LastName), @Html.DisplayFor(modelItem => item.Student.FirstMidName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Grade)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.EnrollmentID }) |
            @Html.ActionLink("Details", "Details", new { id = item.EnrollmentID }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.EnrollmentID })
        </td>
    </tr>
}

</table>
